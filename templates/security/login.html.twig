{% extends 'base.html.twig' %}

{% block title %}
{{parent()}} - Connexion
{% endblock %}

{% block body %}

<div class="row justify-content-center align-items-center vh-100">
	<div class="col-md-5 p-4 shadow-lg">

		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			<h1 class="h3 mb-3 font-weight-normal text-center">
                Connexion Ã  l'application
            </h1>

			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3 " autocomplete="email" required autofocus placeholder="Entrez votre adresse email">

			<input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required placeholder="Entrez votre mot de passe">
            
			<div class="checkbox mb-3 mt-3">
				<label>
					<input type="checkbox" name="_remember_me">
					Se souvenir de moi
				</label>
			</div>


			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-lg btn-primary" type="submit">
				Connexion
			</button>
		</form>
	</div>
</div>


{% endblock %}
