{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Mon Compte
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">

			<div class="col-2 p-0 m-0">
				{% include "partials/_sidebar.html.twig" %}
			</div>
			<div class="col-10">
				{% block content %}
					<div class="row">
						<div class="col-12">
							<h1 class="text-center my-2">
								Cr√©ation d'une offre d'emploi
							</h1>
						</div>
						{{form_start(offerForm)}}
						<div class="col-12 mx-auto">
							<div class="row g-3">
								<div class="col">{{form_row(offerForm.title)}}</div>
								<div class="col">{{form_row(offerForm.location)}}</div>
								<div class="col">{{form_row(offerForm.contractType)}}</div>
								<div class="col">{{form_row(offerForm.salary)}}</div>
							</div>
							<div class="row g-3">
								<div class="col">{{form_row(offerForm.shortDescription)}}</div>
							</div>
							<div class="row g-3">
								{{form_row(offerForm.tags)}}
							</div>
							<div class="row g-3">
								<div class="col">{{form_row(offerForm.content)}}</div>
							</div>
							<button type="submit" class="btn btn-primary">Modifier</button>
							{{form_end(offerForm)}}
						</div>

					{% endblock %}
				</div>

			</div>

		</div>
	{% endblock %}

